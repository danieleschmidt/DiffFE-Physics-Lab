# EditorConfig for DiffFE-Physics-Lab
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
max_line_length = 88
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{c,cpp,h,hpp}]
indent_size = 2

[*.tex]
indent_size = 2
max_line_length = 100

[*.{toml,cfg,ini}]
indent_size = 4

[{.devcontainer/*.json,.vscode/*.json}]
indent_size = 2
