# DiffFE-Physics-Lab Environment Configuration
# Copy this file to .env and customize for your setup

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Data storage path
DIFFHE_DATA_PATH=./data

# Cache directory for meshes, solutions, and temporary files
DIFFHE_CACHE_PATH=./.cache

# Log file directory
DIFFHE_LOG_PATH=./logs

# Configuration files directory
DIFFHE_CONFIG_PATH=./config

# =============================================================================
# COMPUTE CONFIGURATION
# =============================================================================

# Default automatic differentiation backend ('jax' or 'torch')
DIFFHE_DEFAULT_BACKEND=jax

# Enable GPU acceleration (requires CUDA)
DIFFHE_GPU_ENABLED=false

# GPU device ID (if multiple GPUs available)
CUDA_VISIBLE_DEVICES=0

# Number of CPU threads for parallel operations
DIFFHE_NUM_THREADS=4

# Memory limit per process (in GB)
DIFFHE_MEMORY_LIMIT=8

# =============================================================================
# FIREDRAKE CONFIGURATION
# =============================================================================

# Firedrake parameter file
FIREDRAKE_PARAMETERS_PATH=./config/firedrake.yaml

# PETSc options (semicolon separated)
PETSC_OPTIONS=-ksp_type cg -pc_type ilu -ksp_rtol 1e-8

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable JIT compilation for performance
DIFFHE_JIT_ENABLED=true

# Enable result caching
DIFFHE_CACHE_ENABLED=true

# Cache size limit (in MB)
DIFFHE_CACHE_SIZE_MB=1024

# Enable performance profiling
DIFFHE_PROFILE_ENABLED=false

# Profiling output directory
DIFFHE_PROFILE_PATH=./profiles

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (verbose logging, extra validation)
DIFFHE_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DIFFHE_LOG_LEVEL=INFO

# Enable input validation (disable for production performance)
DIFFHE_VALIDATE_INPUTS=true

# Enable automatic convergence studies
DIFFHE_AUTO_CONVERGENCE=false

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================

# Default optimization algorithm
DIFFHE_DEFAULT_OPTIMIZER=lbfgs

# Maximum optimization iterations
DIFFHE_MAX_ITER=1000

# Optimization tolerance
DIFFHE_OPT_TOL=1e-6

# Line search method
DIFFHE_LINESEARCH=backtrack

# =============================================================================
# MESH AND SOLVER SETTINGS
# =============================================================================

# Default mesh refinement levels
DIFFHE_DEFAULT_REFINEMENT=3

# Maximum mesh size (number of elements)
DIFFHE_MAX_MESH_SIZE=1000000

# Default polynomial degree
DIFFHE_DEFAULT_DEGREE=1

# Linear solver tolerance
DIFFHE_SOLVER_TOL=1e-10

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Weights & Biases API key for experiment tracking
WANDB_API_KEY=your_wandb_key_here

# Enable experiment tracking
DIFFHE_TRACKING_ENABLED=false

# Experiment tracking backend ('wandb', 'mlflow', 'tensorboard')
DIFFHE_TRACKING_BACKEND=wandb

# Enable telemetry data collection
DIFFHE_TELEMETRY_ENABLED=false

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================

# Default visualization backend ('matplotlib', 'plotly', 'paraview')
DIFFHE_VIZ_BACKEND=matplotlib

# Figure DPI for saved plots
DIFFHE_FIGURE_DPI=300

# Default colormap
DIFFHE_COLORMAP=viridis

# Enable interactive plots
DIFFHE_INTERACTIVE_PLOTS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Skip slow tests in CI
DIFFHE_SKIP_SLOW_TESTS=false

# Skip GPU tests if no GPU available
DIFFHE_SKIP_GPU_TESTS=auto

# Test data directory
DIFFHE_TEST_DATA_PATH=./tests/data

# =============================================================================
# REPRODUCIBILITY SETTINGS
# =============================================================================

# Random seed for reproducible results
DIFFHE_RANDOM_SEED=42

# Enable deterministic operations (may impact performance)
DIFFHE_DETERMINISTIC=false

# Save intermediate results for debugging
DIFFHE_SAVE_INTERMEDIATE=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Custom Python path additions (colon separated)
DIFFHE_PYTHON_PATH=

# Custom library path additions (colon separated)
DIFFHE_LIBRARY_PATH=

# Enable experimental features
DIFFHE_EXPERIMENTAL=false

# Custom configuration file
DIFFHE_CUSTOM_CONFIG=
